{
  "manifest_version": 3,
  "name": "Chromium Plugin Framework",
  "version": "1.0.0",
  "description": "一个功能完整的Chromium浏览器插件框架",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "notifications",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/js/background.js" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_title": "Chromium Plugin",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/html/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/js/injected.js", "libs/pdf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
